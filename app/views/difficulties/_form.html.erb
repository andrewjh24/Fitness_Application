<%= render 'shared/errors', obj: @difficulty%>
<%= form_with(model: @difficulty, class: "shadow p-3 mb-3 bg-info rounded ",local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name, "Difficulty ", class: "col-2 col-form-label text-dark" %>
    <div class="col-10">
      <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter difficulty" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <%= f.submit class: "btn btn-outline-dark btn-lg" %>
  </div>
<% end %>
