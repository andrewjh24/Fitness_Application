<h1>Workout Listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= workout.title %></td>
        <td><%= workout.description %></td>
        <td><%= link_to 'Show', workout_path(workout) %></td>
        <td><%= link_to 'Edit', edit_workout_path(workout)%></td>
        <td><%= link_to 'Delete', workout_path(workout), method: :delete, data: { confirm: "Are you sure you want to delete this workout?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Create new Workout', new_workout_path %>
</p>
