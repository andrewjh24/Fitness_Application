<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @workout %>
      <%= form_with(model: @workout, class: "shadow p-3 mb-3 bg-info rounded ",local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Workout" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= f.text_area :description , rows:10, class: "form-control shadow rounded", placeholder: "Desciption of Workout"%>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :difficulty, class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= f.collection_select(:difficulty_ids, Difficulty.all, :id, :name, {prompt: "Make your selection from the list below (can be empty)"}, {multiple: true,size: 3, class: "custom-select shadow rounded"}) %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-dark btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to workout listing ]', workouts_path, class: "text-info" %>
    </div>
  </div>
</div>
